#!/bin/python3

import os
from configparser import ConfigParser

from pyrogram import Client, filters
from pyrogram.types import ReplyKeyboardMarkup


current_site = {'twitch': False}
config = ConfigParser()
config.read('config.ini')

API_ID = config.get('pyrogram', 'api_id')
API_HASH = config.get('pyrogram', 'api_hash')
TOKEN = config.get('pyrogram', 'token')
USERNAME = config.get('pyrogram', 'username')
BROWSER = config.get('pyrogram', 'browser')

app = Client(
    session_name='lazynite',
    api_id=API_ID,
    api_hash=API_HASH,
    bot_token=TOKEN
)


@app.on_message(filters.command('start'))
def start(app, message):
    if message.from_user.username == USERNAME:
        reply_markup = ReplyKeyboardMarkup (
            [
                ['ğŸ”Š Volume +', 'ğŸ”´ YouTube'],
                ['ğŸ”‰ Volume -', 'ğŸŸ£ Twitch'],
                ['ğŸ”‡ Mute', 'ğŸ–¥ Fullscreen'],
                ['âŒ Shutdown']
            ]
        )
        app.send_message(
            chat_id=message.chat.id,
            text='Keyboard setted: Home âœ…',
            reply_markup=reply_markup
        )


@app.on_message()
def main(app, message):
    if message.from_user.username == USERNAME:
        # Audio
        # 0: speaker | 1: Headphones | 2: Other (Bluetooth headphones, external speaker, etc...)
        # Add/Remove lines with index that you don't need
        if message.text == 'ğŸ”Š Volume +':
            os.system('pactl set-sink-volume 0 +10%')
            os.system('pactl set-sink-volume 1 +10%')
            os.system('pactl set-sink-volume 2 +10%')
        elif message.text == 'ğŸ”‰ Volume -':
            os.system('pactl set-sink-volume 0 -10%')
            os.system('pactl set-sink-volume 1 -10%')
            os.system('pactl set-sink-volume 2 -10%')
        elif message.text == 'ğŸ”‡ Mute':
            os.system('pactl set-sink-mute 0 toggle')
            os.system('pactl set-sink-mute 1 toggle')
            os.system('pactl set-sink-mute 2 toggle')
        # YouTube
        elif message.text == 'ğŸ”´ YouTube':
            youtube(app, message)
        elif message.text == 'ğŸ  Home':
            current_site['twitch'] = False
            os.system('xdotool key ctrl+w')
            os.system(f'{BROWSER} youtube.com')
        elif message.text == 'ğŸ”¥ Trending':
            current_site['twitch'] = False
            os.system('xdotool key ctrl+w')
            os.system(f'{BROWSER} youtube.com/feed/trending')
        elif message.text == 'ğŸ“« Subscription':
            current_site['twitch'] = False
            os.system('xdotool key ctrl+w')
            os.system(f'{BROWSER} youtube.com/feed/subscriptions')
        elif message.text == 'ğŸ“š Library':
            current_site['twitch'] = False
            os.system('xdotool key ctrl+w')
            os.system(f'{BROWSER} youtube.com/feed/library')
        elif message.text == 'â¬†ï¸ Scroll Up':
            for i in range(3):
                os.system('xdotool key Shift+Tab')
        elif message.text == 'â¬‡ï¸ Scroll Down':
            for i in range(3):
                os.system('xdotool key Tab')
        elif message.text == 'â¬‡ï¸ Super Scroll Down':
            for i in range(15):
                os.system('xdotool key Tab')
        elif message.text == 'â¬†ï¸ Super Scroll Up':
            for i in range(15):
                os.system('xdotool key Shift+Tab')
        elif message.text == 'ğŸ›  Fix focus':
            os.system('xdotool key Tab')
        elif message.text == 'â†©ï¸ 5 sec -':
            os.system('xdotool key Left')
        elif message.text == 'â†ªï¸ 5 sec +':
            os.system('xdotool key Right')
        elif message.text =='ğŸ–¥ Video Fullscreen':
            os.system('xdotool key f')
        elif message.text == 'â†©ï¸ Enter':
            os.system('xdotool key Return')
        elif message.text == 'ğŸ”™ Back':
            start(app, message)
        # Twitch
        elif message.text == 'ğŸŸ£ Twitch':
            twitch(app, message)
        elif message.text == 'ğŸŸ£ Home':
            current_site['twitch'] = True
            os.system('xdotool key ctrl+w')
            os.system(f'{BROWSER} twitch.tv')
        elif message.text == 'ğŸ” Zoom +':
            os.system('xdotool key ctrl+plus')
        elif message.text == 'ğŸ” Zoom -':
            os.system('xdotool key ctrl+minus')
        elif message.text == 'ğŸ‘â€ğŸ—¨ Theatre Mode':
            os.system('xdotool key alt+t')
        # PC
        elif message.text == 'ğŸ–¥ Fullscreen':
            os.system('xdotool key F11')
        elif message.text == 'âŒ Shutdown':
            os.system('shutdown now')
        elif current_site['twitch'] == True:
            os.system('xdotool key ctrl+w')
            os.system(f'{BROWSER} twitch.tv/{message.text}')

def youtube(app, message):
    reply_markup = ReplyKeyboardMarkup(
        [
            ['ğŸ  Home', 'ğŸ”¥ Trending'],
            ['ğŸ“« Subscription', 'ğŸ“š Library'],
            ['â¬†ï¸ Scroll Up', 'â¬†ï¸ Super Scroll Up'],
            ['â¬‡ï¸ Scroll Down', 'â¬‡ï¸ Super Scroll Down'],
            ['ğŸ›  Fix focus'],
            ['â†©ï¸ 5 sec -', 'â†ªï¸ 5 sec +'],
            ['ğŸ–¥ Video Fullscreen'],
            ['â†©ï¸ Enter'],
            ['ğŸ”™ Back']
        ]
    )
    app.send_message(
        chat_id=message.chat.id,
        text='Keyboard setted: Youtube âœ…',
        reply_markup=reply_markup
    )


def twitch(app, message):
    reply_markup = ReplyKeyboardMarkup(
        [
            ['ğŸŸ£ Home'],
            ['ğŸ” Zoom +', 'ğŸ” Zoom -'],
            ['ğŸ‘â€ğŸ—¨ Theatre Mode', 'ğŸ–¥ Video Fullscreen'],
            ['ğŸ”™ Back']
        ]
    )
    app.send_message(
        chat_id=message.chat.id,
        text='Keyboard setted: Twitch âœ…\n Type a channel name for display the stream',
        reply_markup=reply_markup
    )


if __name__ == '__main__':
    app.run()

